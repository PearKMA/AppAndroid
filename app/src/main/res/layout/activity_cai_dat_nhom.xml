<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NguoiThan.CaiDatNhom">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:theme="@style/ToolBarTheme.ToolBarStyle"
            android:background="@color/mauChuDao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </android.support.v7.widget.Toolbar>
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="150dp"
            android:layout_below="@id/toolbar"
            android:id="@+id/settingImage"
            android:layout_height="150dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:src="@mipmap/ic_launcher_round" />

        <TextView
            android:layout_below="@+id/settingImage"
            android:textSize="20sp"
            android:id="@+id/name_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:textColor="@color/mauDen"
            android:text="Tên nhóm" />

        <TextView
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/name_group"
            android:id="@+id/status_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Giới thiệu nhóm"
            android:textSize="16dp"/>
    <LinearLayout
        android:id="@+id/top"
        android:layout_below="@id/status_group"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content">
        <Button
            android:background="@drawable/shape2"
            android:textColor="@color/mauTrang"
            android:id="@+id/button2"
            android:layout_width="133dp"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content"
            android:text="Đổi ảnh" />
        <Button
            android:id="@+id/button3"
            android:layout_width="133dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/shape2"
            android:textColor="@color/mauTrang"
            android:layout_height="wrap_content"
            android:text="Đổi trạng thái" />
    </LinearLayout>
    <LinearLayout

        android:layout_below="@id/top"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content">
        <Button
            android:background="@drawable/shape2"
            android:textColor="@color/mauTrang"
            android:id="@+id/button4"
            android:layout_width="133dp"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content"
            android:text="Đổi Tên" />
        <Button
            android:id="@+id/button5"
            android:layout_width="133dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/shape2"
            android:textColor="@color/mauTrang"
            android:layout_height="wrap_content"
            android:text="Xóa Group" />
    </LinearLayout>

    </RelativeLayout>