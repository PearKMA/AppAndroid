<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textSize="15sp"
        android:layout_marginLeft="6dp"
        android:id="@+id/namechat"
        android:textColor="@color/mauDen"
        />
    <TextView
        android:layout_toRightOf="@id/namechat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time"
        android:layout_marginLeft="20dp"
        android:id="@+id/datechat"
        android:textSize="15sp"
        android:textColor="@color/mauDen"
        />
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/message_profile_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@id/namechat"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="1dp"

        android:src="@drawable/icon_online" />

    <TextView
        android:layout_toRightOf="@id/message_profile_image"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:id="@+id/message_text"
        android:layout_below="@id/namechat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/message_text_background"
        android:padding="15dp"
        android:gravity="center_vertical"
        android:text="TextView"
        android:textSize="16sp"
        android:textColor="@color/mauTrang" />

</RelativeLayout>