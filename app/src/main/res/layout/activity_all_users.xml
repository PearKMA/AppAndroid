<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Chat.AllUsersActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:background="@color/mauChuDao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </android.support.v7.widget.Toolbar>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rcViewUser"
        android:layout_width="match_parent"
        android:layout_height="431dp"
        android:layout_below="@id/toolbar"
        android:layout_marginTop="80dp">
    </android.support.v7.widget.RecyclerView>
    <EditText
        android:id="@+id/search_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/toolbar"
        android:layout_margin="15dp"
        android:ems="10"
        android:padding="10dp"
        android:inputType="textMultiLine"
        android:hint="Tìm bạn bè..."
        android:textColorHint="@color/mauTrang"
        android:textColor="@color/mauTrang"
        android:background="@drawable/search_text_background"
        android:textSize="18sp" />
    <ImageButton
        android:id="@+id/search_btn"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_alignEnd="@+id/search_text"
        android:layout_alignRight="@+id/search_text"
        android:layout_alignTop="@+id/search_text"
        android:padding="10dp"
        android:background="@drawable/search_text_background"
        android:src="@drawable/places_ic_search" />
</RelativeLayout>