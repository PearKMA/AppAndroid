<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".LienKetAction.LienKetActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="Bạn đã có nhóm chia sẻ vị trí chưa ?"
        android:textColor="@color/mauDen"
        android:textSize="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnTaoNhom"
            android:layout_width="0dp"
            android:layout_marginHorizontal="10dp"
            android:textColor="@color/mauTrang"
            android:background="@drawable/shape2"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Tạo nhóm" />

        <Button
            android:layout_marginHorizontal="10dp"
            android:textColor="@color/mauTrang"
            android:background="@drawable/shape2"
            android:id="@+id/btnThamGiaNhom"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Tham gia nhóm" />
    </LinearLayout>

    <ImageView
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:src="@drawable/mapvietnam" />

</LinearLayout>